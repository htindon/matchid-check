{
	"manifest_version": 3,
	"name": "matchid-check",
	"version": "1.0.1",
	"action": {
		"default_popup": "popup.html"
	},
	//"default_locale": "fr",
	"description": "Vérifier un décès à la volée tout en travaillant sur sa généalogie.",
	"icons": {
    	"16": "images/icon-16.png",
    	"32": "images/icon-32.png",
    	"48": "images/icon-48.png",
    	"128": "images/icon-128.png"
	},
	"content_scripts": [
		{
			"js": ["scripts/content.js"],
			"css": ["matchid-check.css"],
			"matches":["<all_urls>"]
		}
	],
	"author": "helene.tindon@gmail.com"
}